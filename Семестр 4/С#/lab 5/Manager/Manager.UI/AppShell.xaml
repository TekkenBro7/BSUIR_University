    xmlns:local="clr-namespace:Manager.UI"
    xmlns:pages="clr-namespace:Manager.UI.Pages"
    Title="Manager">
    <ShellContent
        Title="Authors"
        ContentTemplate="{DataTemplate pages:AuthorList}"
